
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  phone     String?

  locations UserLocation?
  sosEvents SOSEvent[]
  contacts  EmergencyContact[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserLocation {
  userId    String   @id  @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  lat       Float
  lng       Float
  accuracy  Float?

  source    String?   // BROWSER, MOBILE, DEVICE
  updatedAt DateTime  @updatedAt
}

model SOSEvent {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  lat         Float
  lng         Float

  status      String   // ACTIVE, CANCELLED, ESCALATED, RESOLVED
  triggerType String   // MANUAL, AUTO, NO_RESPONSE

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model EmergencyContact {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  name      String
  phone     String
  relation  String
  priority  Int      @default(1)

  createdAt DateTime @default(now())
}
